{
  "buildCommand": "npm install && cd server && npm install && cd ../client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}
